section.canvas-node.graph-node
    section.meta
        .fg
        .bg
    section.chart
        svg(pointer-events='all', data-bind='attr: { width:frameWidth, height:frameHeight }')
            defs
                clipPath(data-bind='attr: { id:"clip-"+graphId }')
                    rect(data-bind='attr: { width:viewportWidth, height:viewportHeight }')
                g.metricDefs
            g(data-bind='attr: { transform:"translate("+margin.left+","+margin.top+")" }')
                g.fg
                g.frame(data-bind='attr: { "clip-path":"url(#clip-"+graphId+")" }')
                    g.viewport
                    g.bg
            

