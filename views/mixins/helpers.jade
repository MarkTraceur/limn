- if (!locals.version) locals.version = 'HEAD';
- if (version == null || !version || version === 'HEAD') { locals.version = String(new Date().getTime()); }

mixin css(href, media, root, cssClasses, noPrint)
    - var ver
    - media = media || 'screen'
    - root  = root || (href.charAt(0) === '/' ? locals.mount : locals.path.join(locals.mount, 'css'))
    - ver   = (locals.version ? (href.indexOf('?') === -1 ? '?' : '&')+locals.version : '')
    - href  = locals.path.join(root, href) + ver
    link(type='text/css', rel='stylesheet', media=media, href=href, class=cssClasses)
    unless noPrint || media === 'print'
        link(type='text/css', rel='stylesheet', media='print', href=href, class=cssClasses)


